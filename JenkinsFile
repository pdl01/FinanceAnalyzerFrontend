pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                checkout scm
            }
            /* Let's make sure we have the repository cloned to our workspace */

            
        }
        stage ('Install NPM') {
            steps {
                sh '/usr/bin/npm install'
            }
            
        }
        stage ('Build Production Version') {
            steps {
                sh '/usr/bin/npm "run-script" "build_prod"'
            }
            
        }    
    }

}
